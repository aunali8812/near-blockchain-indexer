# Production Environment Variables Template
# Copy this file and update values for your production deployment

# Database (will be provided by RDS)
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@YOUR_RDS_ENDPOINT:5432/potlock_indexer"

# Redis (will be provided by ElastiCache)
REDIS_HOST="your-redis-endpoint.cache.amazonaws.com"
REDIS_PORT=6379

# NEAR Configuration - MAINNET
NEAR_NETWORK="mainnet"
NEAR_RPC_URL="https://rpc.fastnear.com"
DIRECT_DONATIONS_CONTRACT="donate.potlock.near"
POT_FACTORY_CONTRACT="potfactory.potlock.near"
LIST_REGISTRY_CONTRACT="lists.potlock.near"

# Indexer Configuration
# For mainnet, start from a recent block or use 0 for current block
START_BLOCK_HEIGHT=0
INDEXER_POLL_INTERVAL_MS=5000

# Price Feed (optional but recommended for production)
COINGECKO_API_KEY=""
PRICE_UPDATE_INTERVAL_MS=300000

# API Configuration
PORT=3000
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=500
